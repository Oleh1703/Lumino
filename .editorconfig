root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# ===============================
# C#
# ===============================
[*.cs]
indent_size = 4

# ===============================
# JSON
# ===============================
[*.json]
indent_size = 2

# ===============================
# JavaScript / TypeScript
# ===============================
[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

# ===============================
# Markdown
# ===============================
[*.md]
trim_trailing_whitespace = false
