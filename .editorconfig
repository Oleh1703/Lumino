root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# ===============================
# .NET / Visual Studio
# ===============================
[*.sln]
end_of_line = crlf

[*.csproj]
end_of_line = crlf

[*.props]
end_of_line = crlf

[*.targets]
end_of_line = crlf

# ===============================
# C#
# ===============================
[*.{cs,csx}]
end_of_line = crlf
indent_size = 4

# ===============================
# JSON
# ===============================
[*.json]
end_of_line = crlf
indent_size = 2

# ===============================
# JavaScript / TypeScript
# ===============================
[*.{js,jsx,ts,tsx}]
end_of_line = crlf
indent_size = 2

# ===============================
# Shell scripts
# ===============================
[*.sh]
end_of_line = lf
indent_size = 2

# ===============================
# Markdown
# ===============================
[*.md]
end_of_line = crlf
trim_trailing_whitespace = false
