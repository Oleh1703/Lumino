###############################################################################
# Default behavior
###############################################################################

# Усі текстові файли зберігати в репозиторії як CRLF
* text=auto eol=crlf

###############################################################################
# C# / .NET
###############################################################################

*.cs      text eol=crlf
*.csproj  text eol=crlf
*.sln     text eol=crlf
*.props   text eol=crlf
*.targets text eol=crlf
*.json    text eol=crlf
*.xml     text eol=crlf
*.config  text eol=crlf
*.yml     text eol=crlf
*.yaml    text eol=crlf
*.md      text eol=crlf
*.txt     text eol=crlf

###############################################################################
# Scripts
###############################################################################

*.sh      text eol=lf
*.ps1     text eol=crlf
*.bat     text eol=crlf

###############################################################################
# Static content (binary)
###############################################################################

*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.svg  binary

###############################################################################
# Archives / compiled
###############################################################################

*.zip  binary
*.rar  binary
*.7z   binary
*.dll  binary
*.exe  binary
*.pdb  binary
*.so   binary
*.dylib binary
